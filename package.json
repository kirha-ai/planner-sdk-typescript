{
  "name": "@kirha/planner",
  "version": "0.1.2",
  "description": "SDK for tool-planning agents - generate and execute DAG execution plans from natural language",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "test": "bun test",
    "lint": "biome check --write",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "tool-planning",
    "dag",
    "execution-plan",
    "openai"
  ],
  "author": "Kirha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirha-ai/planner-sdk-typescript"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "@types/uuid": "^11.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "json5": "^2.2.3",
    "openai": "^6.14.0",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  }
}
